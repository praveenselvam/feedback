= form_for @gift do |f|
  -if @gift.errors.any?
    #error_explanation
      %h2= "#{pluralize(@gift.errors.count, "error")} prohibited this gift from being saved:"
      %ul
        - @gift.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :points
    = f.number_field :points
  .actions
    = f.submit 'Save'
